<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID SP :"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TPX"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã loại SP :"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_masp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TPX"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Loại SP :"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_tensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TPX"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng SP :"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_soluongsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TPX"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users products SP :"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_user_producstsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TPX"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorxanhlam"
            android:textSize="8pt"
            android:textAllCaps="false"
            android:textStyle="italic"
            />
    </LinearLayout>
</LinearLayout>