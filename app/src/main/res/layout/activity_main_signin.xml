<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_background1"
    android:orientation="vertical"
    tools:context=".View.Home.DangNhap.SignIn">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher" />
    <!--.................................................-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:theme="@style/EditTextHint">

            <com.example.nhuviet.hockontlin_synthetic_signin.CutomView.Clear_EditText
                android:id="@+id/ed_diachiemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa Chỉ Email"
                android:textColor="@color/colortrang" />
        </android.support.design.widget.TextInputLayout>
        <!--..............-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:theme="@style/EditTextHint"
            app:useeyeTrike="true"
            app:usevalidata="true">

            <com.example.nhuviet.hockontlin_synthetic_signin.CutomView.PassWork_EditText
                android:id="@+id/ed_matkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:textColor="@color/colortrang" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <!--...................................................-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_dktaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng kí tài khoản.! "
            android:textAllCaps="false"
            android:textColor="@color/colortrang" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:background="@color/colordangnhap"
        android:text="Đăng Nhập"
        android:textAllCaps="false"
        android:textColor="@color/colortrang"
        android:textSize="12pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Hoặc Đăng Nhập"
            android:textAllCaps="false"
            android:textColor="@color/colortrang"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_dangki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên Mật Khẩu?"
            android:textAllCaps="false"
            android:textColor="@color/colortrang" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colortim"
            android:text="Facebook"
            android:textAllCaps="false"
            android:textColor="@color/colortrang" />

        <Button
            android:id="@+id/bt_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colordo"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="@color/colortrang" />
    </LinearLayout>
</LinearLayout>